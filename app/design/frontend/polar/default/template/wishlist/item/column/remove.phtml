$item = $this->getItem();
$product = $item->getProduct();
?>
<div class="total small-12 medium-3 large-2 columns text-right">
	<div class="add">
	<?php if ($product->isSaleable()): ?>
	    <a title="<?php echo $this->__('Add to my Bag') ?>" href="javascript:void(0)" onclick="addWItemToCart(<?php echo $item->getId()?>);"><?php echo $this->__('Add to my Bag') ?></a>
	<?php else: ?>
	    <?php if ($product->getIsSalable()): ?>
	        <p class="availability in-stock"><span><?php echo $this->__('In stock') ?></span></p>
	    <?php else: ?>
	        <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
	    <?php endif; ?>
	<?php endif; ?>
	</div>
	<div class="remove">
	<a href="<?php echo $this->getItemRemoveUrl($this->getItem()); ?>" title="<?php echo $this->__('Remove Item') ?>"><span><?php echo $this->__('Remove');?></span><span class="icon icon-delete"></span></a>
	</div>
</div>